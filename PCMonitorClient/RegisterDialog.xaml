<Window x:Name="registerWindow"  x:Class="PCMonitorClient.RegisterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCMonitorClient"
        xmlns:controls="clr-namespace:PCMonitorClient.Controls"
        mc:Ignorable="d"
        Title="RegisterDialog"  
        Height="700" Width="1000" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        WindowState="Maximized" 
        Topmost="True" 
        Background="#FFF0F0F0" 
        Closing="Window_Closing" 
        Closed="Window_Closed" 
        Loaded="Window_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Left 70% -->
            <ColumnDefinition Width="7*"/>
            <!-- Right 30% -->
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: background image -->
        <controls:ImageCarousel x:Name="SiteImageCarousel" 
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch"/>

        <!-- Right: form register -->
        <Border Grid.Column="1" 
                Background="White" 
                Padding="20"
                VerticalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Form Content -->
                <ScrollViewer Grid.Row="0" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Top"
                                Margin="20">

                        <!-- Logo -->
                        <Image Source="pack://application:,,,/Assets/nadi-madani-logo.png"
                               MaxWidth="260"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                        <!-- Subtitle -->
                        <TextBlock Text="Register Member" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#FF333333" 
                                   Margin="0,0,0,15"
                                   HorizontalAlignment="Center"/>

                        <Label x:Name="labelFullName" Content="Full Name:" 
                               FontSize="13" 
                               Foreground="Black"
                               FontWeight="Bold" 
                               Padding="0,0,0,3"/>
                        <TextBox x:Name="textFullName" 
                                 Height="35" 
                                 FontSize="13"
                                 Margin="0,0,0,10"/>

                        <!-- Email -->
                        <Label x:Name="labelEmail" Content="Email:" 
                               FontSize="13" 
                               Foreground="Black"
                               FontWeight="Bold" 
                               Padding="0,0,0,3"/>
                        <TextBox x:Name="textEmail" 
                                 Height="35" 
                                 FontSize="13"
                                 Margin="0,0,0,10"/>

                        <Label x:Name="labelGender" Content="Gender:" 
                                FontSize="13" 
                                Foreground="Black"
                                FontWeight="Bold" 
                                Padding="0,0,0,3"/>
                        <ComboBox x:Name="GenderComboBox" 
                                  Height="40" 
                                  SelectedIndex="0" 
                                  Margin="0,0,0,10">
                            <ComboBoxItem Content="Male" Tag="1"/>
                            <ComboBoxItem Content="Female" Tag="2"/>
                        </ComboBox>

                        <!-- IC Number -->
                        <Label x:Name="labelIcNumber" Content="IC Number:" 
                               FontSize="13" 
                               Foreground="Black"
                               FontWeight="Bold" 
                               Padding="0,0,0,3"/>
                        <TextBox x:Name="textIcNumber" 
                                 Height="35" 
                                 FontSize="13"
                                 Margin="0,0,0,10"/>

                        <!-- Phone Number -->
                        <Label x:Name="labelPhoneNumber" Content="Phone Number:" 
                               FontSize="13" 
                               Foreground="Black"
                               FontWeight="Bold" 
                               Padding="0,0,0,3"/>
                        <TextBox x:Name="textPhoneNumber" 
                                 Height="35" 
                                 FontSize="13"
                                 Margin="0,0,0,10"/>

                        <!-- Password -->
                        <Label x:Name="labelPassword" Content="Password:" 
                               FontSize="13" 
                               Foreground="Black"
                               FontWeight="Bold" 
                               Padding="0,0,0,3"/>
                        <TextBox x:Name="textPassword" 
                                 Height="35" 
                                 FontSize="13"
                                 Margin="0,0,0,10"/>

                        <!-- Check IC -->
                        <Button x:Name="checkIcButton" 
                                Height="40" 
                                Content="Register" 
                                Background="#FF007BFF" 
                                Foreground="White" 
                                FontSize="15" 
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand" 
                                Margin="0,15,0,0"
                                Click="checkIcBtn_Click"/>

                        <!-- Register Button -->
                        <Button x:Name="registerBtn" 
                                Height="40" 
                                Content="Register" 
                                Background="#FF007BFF" 
                                Foreground="White" 
                                FontSize="15" 
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand" 
                                Margin="0,15,0,0"
                                Click="registerBtn_Click"/>

                        <Button x:Name="newRegisterBtn" 
                                Height="40" 
                                Content="Register" 
                                Background="#FF007BFF" 
                                Foreground="White" 
                                FontSize="15" 
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand" 
                                Margin="0,15,0,0"
                                Click="newRegisterBtn_Click"/>

                        <!-- Login Link -->
                        <TextBlock HorizontalAlignment="Center" 
                                   Margin="0,12,0,0"
                                   FontSize="13">
                            <Run Text="You already have an account? " 
                                 Foreground="#FF666666"/>
                            <Hyperlink x:Name="loginLink"
                                       Click="loginLink_Click"
                                       Foreground="#FF007BFF"
                                       TextDecorations="None">
                                <Run Text="Login now" 
                                     FontWeight="SemiBold"/>
                            </Hyperlink>
                        </TextBlock>

                    </StackPanel>
                </ScrollViewer>

                <!-- Bottom Section -->
                <StackPanel Grid.Row="1" 
                            HorizontalAlignment="Center"
                            Margin="0,12,0,12">


                    <!-- Version -->
                    <TextBlock x:Name="Version"  
                               Text="2.2.11.0"   
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
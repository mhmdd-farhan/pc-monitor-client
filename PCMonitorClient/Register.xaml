<Window x:Class="PCMonitorClient.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCMonitorClient"
        mc:Ignorable="d"
        Title="LoginPC" 
        Height="700" Width="1000"
        ResizeMode="NoResize" 
        WindowState="Maximized" 
        Topmost="True" 
        Background="#FFF0F0F0" 
        WindowStyle="None"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Title Bar -->
            <RowDefinition Height="35"/>
            <!-- Content -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" 
                Background="#FF2C3E50" 
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Window Title -->
                <TextBlock Grid.Column="0"
                           Text="Nadi Monitor - Registration PC"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"
                           Foreground="White"
                           FontSize="13"
                           FontWeight="Medium"/>

                <!-- Window Control Buttons -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal">

                    <!-- Minimize Button -->
                    <Button x:Name="btnMinimize"
                            Width="45" Height="35"
                            Content="—"
                            FontSize="16"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Click="MinimizeButton_Click"/>

                    <!-- Close Button -->
                    <Button x:Name="btnClose"
                            Width="45" Height="35"
                            Content="✕"
                            FontSize="16"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Click="CloseButton_Click" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Left 75% -->
                <ColumnDefinition Width="3*"/>
                <!-- Right 25% -->
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side: image full background -->
            <Image Grid.Column="0"
                   Source="pack://application:,,,/Assets/bg.png"
                   Stretch="Fill"/>

            <!-- Right Side: form -->
            <Border Grid.Column="1" 
                    Background="White" 
                    Padding="40">
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Top" 
                            Margin="0,0,0,0"
                            Width="300">

                    <!-- Logo / Title -->
                    <Image Source="pack://application:,,,/Assets/nadi-madani-logo.png"
                           Width="260"
                           Stretch="Fill"/>

                    <!-- Subtitle -->
                    <TextBlock Text="PC Registration" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="#FF333333" 
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>

                    <!-- PC Name Label -->
                    <Label x:Name="pcName"  
                           Content="PC Name:"   
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="Black"
                           Width="260"/>

                    <!-- Input: PC Name -->
                    <TextBox x:Name="pcNameBox" 
                             Height="40" 
                             FontSize="14"
                             Margin="0,0,0,15"
                             Width="260"/>

                    <!-- Site Name Label -->
                    <Label x:Name="refId"  
                           Content="Ref ID MCMC:"   
                           FontSize="14" 
                           FontWeight="Bold"
                           Foreground="Black"
                           Width="260"/>

                    <!-- Input: Site Location -->
                    <TextBox x:Name="refIdBox" 
                             Height="40" 
                             FontSize="14"
                             Margin="0,0,0,15"
                             Width="260"/>

                    <!-- Register Button -->
                    <Button x:Name="registerBtn" 
                            Height="45" 
                            Content="Register PC" 
                            Background="#FF007BFF" 
                            Foreground="White" 
                            FontSize="16" 
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,25,0,0"
                            Click="registerBtn_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
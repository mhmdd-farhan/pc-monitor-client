<Window x:Class="PCMonitorClient.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCMonitorClient"
        mc:Ignorable="d"
        Title="Alert" Height="80" Width="200" WindowStyle="None" Background="Transparent"
        ShowInTaskbar="False" AllowsTransparency="True" Topmost="True" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Border Background="#992D2D30" CornerRadius="15" Padding="15" 
            Effect="{DynamicResource DropShadowEffect}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="msgText" Text="This is a popup alert." Foreground="White" FontSize="14" TextWrapping="Wrap" TextAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>

<UserControl x:Class="PCMonitorClient.Controls.ImageCarousel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <UserControl.Resources>
        <!-- Navigation Button Style -->
        <Style x:Key="CarouselButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#80000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B0000000"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dot Indicator Style -->
        <Style x:Key="DotIndicatorStyle" TargetType="Button">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Background" Value="#40FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#80FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Dot Style -->
        <Style x:Key="ActiveDotStyle" TargetType="Button" BasedOn="{StaticResource DotIndicatorStyle}">
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Loading Animation -->
        <Storyboard x:Key="LoadingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LoadingEllipse"
                           Storyboard.TargetProperty="RenderTransform.Angle"
                           From="0" To="360" Duration="0:0:1"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="MainGrid">
        <!-- Main Carousel Container -->
        <Border Background="#F5F5F5" CornerRadius="8" ClipToBounds="True">
            <Grid>
                <!-- Image Display Area -->
                <Grid ClipToBounds="True">
                    <Image x:Name="CurrentImage" 
                           Stretch="UniformToFill"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </Grid>

                <!-- Loading Indicator -->
                <Grid x:Name="LoadingPanel" Visibility="Visible">
                    <Rectangle Fill="#80000000"/>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Ellipse x:Name="LoadingEllipse" 
                                Width="40" Height="40" 
                                Stroke="White" StrokeThickness="3"
                                StrokeDashArray="5,5"
                                RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <TextBlock Text="Loading Images..." 
                                  Foreground="White" 
                                  FontSize="14" 
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Error Message -->
                <Grid x:Name="ErrorPanel" Visibility="Collapsed">
                    <Rectangle Fill="#80FF0000"/>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⚠" FontSize="32" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="ErrorText" 
                                  Text="Failed to load images" 
                                  Foreground="White" 
                                  FontSize="14" 
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,10"/>
                        <Button Content="Retry" 
                               Click="RetryButton_Click"
                               Background="#FF4444"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="15,8"
                               Cursor="Hand"/>
                    </StackPanel>
                </Grid>

                <!-- Navigation Buttons -->
                <Button x:Name="PrevButton" 
                        Content="‹"
                        Style="{StaticResource CarouselButtonStyle}"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center"
                        Margin="15,0"
                        Click="PrevButton_Click"
                        Visibility="Collapsed"/>

                <Button x:Name="NextButton" 
                        Content="›"
                        Style="{StaticResource CarouselButtonStyle}"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center"
                        Margin="15,0"
                        Click="NextButton_Click"
                        Visibility="Collapsed"/>

                <!-- Dot Indicators -->
                <StackPanel x:Name="DotsPanel" 
                           Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,20"
                           Visibility="Collapsed"/>

                <!-- Image Counter -->
                <Border Background="#80000000" 
                       CornerRadius="12"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="15"
                       Padding="8,4"
                       x:Name="CounterPanel"
                       Visibility="Collapsed">
                    <TextBlock x:Name="CounterText" 
                              Foreground="White" 
                              FontSize="12"
                              Text="1 / 5"/>
                </Border>

                <!-- PC Info Box - Square 1:1 -->
                <Border Background="#F0F0F0" 
                        CornerRadius="8"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="15"
                        Width="120"
                        Height="120"
                        x:Name="PcInfoPanel">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" 
                         Direction="270" 
                         ShadowDepth="2" 
                         Opacity="0.3" 
                         BlurRadius="8"/>
                    </Border.Effect>
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Margin="8">
                        <TextBlock x:Name="PcNameText" 
                                Text="PC..."
                                FontWeight="Bold" 
                                FontSize="25"
                                Foreground="#2C3E50"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                MaxWidth="100"/>
                        <TextBlock x:Name="SiteNameText" 
                                Text="SIte..."
                                FontWeight="SemiBold" 
                                FontSize="12"
                                Foreground="#7F8C8D"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                MaxWidth="100"
                                Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
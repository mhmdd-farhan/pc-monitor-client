<Window x:Name="cpuUsage"  x:Class="PCMonitorClient.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCMonitorClient"
        xmlns:controls="clr-namespace:PCMonitorClient.Controls"
        mc:Ignorable="d"
        Title="LoginDialog"  
        Height="700" Width="1000" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        WindowState="Maximized" 
        Topmost="True" 
        Background="#FFF0F0F0" 
        Closing="Window_Closing" 
        Closed="Window_Closed"
        IsVisibleChanged="LoginDialog_IsVisibleChanged"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Kiri 75% -->
            <ColumnDefinition Width="3*"/>
            <!-- Kanan 25% -->
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Bagian kiri: background image -->
        <controls:ImageCarousel x:Name="SiteImageCarousel" />

        <!-- Bagian kanan: form login -->
        <Border Grid.Column="1" 
                Background="White" 
                Padding="40">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Form Content -->
                <StackPanel Grid.Row="0"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Top" 
                            Margin="0,0,0,0">

                    <!-- Judul / Welcome -->
                    <Image  Source="pack://application:,,,/Assets/nadi-madani-logo.png"
                            MaxWidth="260"
                            Stretch="Uniform"
                            HorizontalAlignment="Center"/>

                    <!-- Subtitle -->
                    <TextBlock Text="Login" 
                        FontSize="16" 
                        FontWeight="SemiBold" 
                        Foreground="#FF333333" 
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center"/>

                    <!-- Membership ID -->
                    <Label x:Name="labelMemberShipId" 
                           Content="Membership ID or IC Number:" 
                           FontSize="14" 
                           Foreground="Black"
                           FontWeight="Bold"/>
                    <ComboBox x:Name="comboSelect" 
                              SelectedIndex="0" 
                              Height="40"
                              FontSize="14"
                              SelectionChanged="comboSelect_SelectionChanged">
                        <ComboBoxItem Content="IC Number" x:Name="optionIcNumber" 
                                      Height="40" FontSize="14"/>
                        <ComboBoxItem Content="Membership ID" x:Name="optionMemberShipId" 
                                      Height="40" FontSize="14"/>
                        <ComboBoxItem Content="Site PC Password" x:Name="optionSitePassword" 
                                      Height="40" FontSize="14"/>
                    </ComboBox>
                    <TextBox x:Name="textMemberShipId" 
                             Height="40" 
                             FontSize="14"
                             Margin="0,0,0,15"/>
                    <TextBox x:Name="textIcNumber" 
                            Height="40" 
                            FontSize="14"
                            Margin="0,0,0,15"/>
                    <PasswordBox x:Name="textSitePassword"
                            Height="40" 
                            FontSize="14"
                            Margin="0,0,0,15"/>

                    <!-- Login Button -->
                    <Button x:Name="loginBtn" 
                            Height="45" 
                            Content="Login" 
                            Background="#FF007BFF" 
                            Foreground="White" 
                            FontSize="16" 
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand" 
                            Margin="0,25,0,0"
                            Click="loginBtn_Click"/>

                    <TextBlock HorizontalAlignment="Center" 
                                   Margin="0,20,0,0"
                                   FontSize="14">
                            <Run Text="You don't have an account? " 
                                 Foreground="#FF666666"/>
                            <Hyperlink x:Name="registerLink"
                                       Click="RegisterLink_Click"
                                       Foreground="#FF007BFF"
                                       TextDecorations="None">
                                <Run Text="Register now" 
                                     FontWeight="SemiBold"/>
                            </Hyperlink>
                    </TextBlock>

                </StackPanel>

                <!-- Bottom Section -->
                <StackPanel Grid.Row="1" 
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">

                    <!-- Version -->
                    <TextBlock x:Name="Version"
                               Text="2.2.11.0"  
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>